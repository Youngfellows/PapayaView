<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--定义属性-->
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>

    <attr name="imageSrc" format="reference"/>
    <attr name="imageScalType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>

    <!--命名空间的名字-->
    <declare-styleable name="SettingItemView">
        <attr name="LeftText" format="string"/>
        <attr name="RightText" format="string"/>
        <attr name="Img" format="reference"/>
    </declare-styleable>

    <!--随机数属性-->
    <declare-styleable name="RandomNumberView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>

    <!--带文字的图片属性-->
    <declare-styleable name="TextImageView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
        <attr name="imageSrc"/>
        <attr name="imageScalType"/>
    </declare-styleable>

    <!--环形进度条-->
    <declare-styleable name="ProgressBarView">
        <attr name="circleWidth" format="dimension"/>
        <attr name="progressColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>
</resources>