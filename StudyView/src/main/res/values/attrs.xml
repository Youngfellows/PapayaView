<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--定义属性-->
    <attr name="titleText" format="string"/>
    <attr name="titleTextColor" format="color"/>
    <attr name="titleTextSize" format="dimension"/>

    <attr name="imageSrc" format="reference"/>
    <attr name="imageScalType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>

    <attr name="circleWidth" format="dimension"/>
    <attr name="progressColor" format="color"/>
    <attr name="backgroundColor" format="color"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="speed" format="integer"/>

    <attr name="textVisible" format="boolean"/>
    <attr name="dotCount" format="integer"/>
    <attr name="spliteSize" format="integer"/>
    <attr name="centerPic" format="reference"/>
    <attr name="centralAngle" format="integer"/>

    <!--命名空间的名字-->
    <declare-styleable name="SettingItemView">
        <attr name="LeftText" format="string"/>
        <attr name="RightText" format="string"/>
        <attr name="Img" format="reference"/>
    </declare-styleable>

    <!--随机数属性-->
    <declare-styleable name="RandomNumberView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>

    <!--带文字的图片属性-->
    <declare-styleable name="TextImageView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
        <attr name="imageSrc"/>
        <attr name="imageScalType"/>
    </declare-styleable>

    <!--环形进度条-->
    <declare-styleable name="ProgressBarView">
        <attr name="circleWidth"/>
        <attr name="progressColor"/>
        <attr name="backgroundColor"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="speed"/>
    </declare-styleable>

    <!--声音控制-->
    <declare-styleable name="VolumControlView">
        <attr name="circleWidth"/>
        <attr name="progressColor"/>
        <attr name="backgroundColor"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="textVisible"/>
        <attr name="dotCount"/>
        <attr name="spliteSize"/>
        <attr name="centerPic"/>
        <attr name="centralAngle"/>
    </declare-styleable>

    <!--圆形-->
    <declare-styleable name="ColorCircleView">
        <attr name="circle_color" format="color"/>
        <attr name="stroke_width" format="dimension"/>
    </declare-styleable>

    <!--组合式控件-->
    <declare-styleable name="MixTextImage">
        <attr name="mix_image_src" format="reference"/>
        <attr name="mix_image_bg" format="reference"/>
        <attr name="mix_image_width" format="dimension"/>
        <attr name="mix_image_height" format="dimension"/>
        <attr name="mix_image_alpha" format="integer"/>
        <attr name="mix_title" format="string"/>
        <attr name="mix_title_color" format="color"/>
        <attr name="mix_title_size" format="dimension"/>
    </declare-styleable>
</resources>